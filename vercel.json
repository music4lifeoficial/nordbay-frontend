{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "src/app/**/*.{ts,tsx}": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/railway/:path*",
      "destination": "https://nordbay-production.up.railway.app/api/:path*"
    }
  ]
}
